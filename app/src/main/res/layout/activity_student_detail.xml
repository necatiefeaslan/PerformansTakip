<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Öğrenci adı TextView ekle -->
        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Kontrol Listesi Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontrol Listesi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Kontrol Listesi Kutusu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/odevKontrol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Ödev Kontrol"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DADADA" />

            <TextView
                android:id="@+id/kiyafetKontrol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Kıyafet Kontrol"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DADADA" />

            <TextView
                android:id="@+id/performans100Kontrol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Performans Kontrol (0-100)"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DADADA" />


        </LinearLayout>

        <!-- Geri Dön Butonu -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geri Dön"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
